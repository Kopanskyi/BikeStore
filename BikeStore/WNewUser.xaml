<Window x:Class="BikeStore.WNewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BikeStore"
        mc:Ignorable="d"
    Title="New User" Height="240" Width="440">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Content="Name:" Margin="25,15,20,15" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" FontWeight="Bold" />
        <Label Content="Phone:" Margin="25,15,20,15" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" FontWeight="Bold" />
        <TextBox Name="txtName" Grid.Column="1" Margin="20,15"></TextBox>
        <TextBox Name="txtPhone" Grid.Column="1" Grid.Row="1" Margin="20,15"></TextBox>

        <Button Name="Save" Content="Save" Grid.Column="1" Grid.Row="4" Margin="20,15" Click="Save_Click"></Button>

    </Grid>
</Window>
